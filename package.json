{
  "name": "hzstack",
  "version": "1.0.0",
  "description": "HZstack — готовый стек (Next.js, TS, SCSS, Supabase, Gulp, CI, Cypress, Storybook)",
  "private": true,
  "bin": {
    "create-hzstack": "scripts/create-hzstack.mjs"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky",
    "assets:build": "gulp build",
    "assets:watch": "gulp watch",
    "test:e2e": "cypress run --e2e --browser chrome",
    "test:e2e:open": "cypress open --e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "next lint --fix --max-warnings=0"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "assets": {
    "stylesSrc": "styles/**/*.scss",
    "stylesDest": "public/css"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@supabase/ssr": "^0.0.10",
    "@supabase/supabase-js": "^2.39.1",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "date-fns": "^3.0.6",
    "framer-motion": "^12.23.24",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.65.0",
    "recharts": "^2.10.3",
    "zod": "^4.1.12",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/nextjs": "^10.0.2",
    "@storybook/react": "^10.0.2",
    "@storybook/test": "^8.6.14",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "^8.6.14",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "cypress": "^15.5.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "sass": "^1.70.0",
    "stylelint": "^16.25.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.12.1",
    "stylelint-selector-bem-pattern": "^4.0.1",
    "typescript": "^5.3.3"
  }
}
